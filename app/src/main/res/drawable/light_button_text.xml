<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused and pressed -->
    <item android:color="@color/lightG" android:state_focused="true" android:state_pressed="true" />

    <!-- Unfocused and pressed -->
    <item android:color="@color/lightG" android:state_focused="false" android:state_pressed="true" />

    <!-- Default color -->
    <item android:color="@color/black" />
</selector>